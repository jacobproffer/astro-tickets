---
import type { CollectionEntry } from "astro:content";
import Ticket from "./Ticket.astro";

interface Props {
  tickets: CollectionEntry<"tickets">[];
  class?: string;
  transitionName?: string;
}

const { tickets, class: className, transitionName } = Astro.props;
---

<ol
  class:list={[
    "grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 border-t border-l border-dashed border-black",
    className,
  ]}
  transition:name={transitionName}
>
  {
    tickets.map((ticket) => (
      <li>
        <Ticket
          title={ticket.data.title}
          theater={ticket.data.theater}
          time={ticket.data.date.toISOString().split("T")[0]}
          price={ticket.data.price}
          rating={ticket.data.rating}
          international={ticket.data.international}
        />
      </li>
    ))
  }
</ol>
