---
interface Props {
  href: string;
  isActive?: boolean;
  class?: string;
}

const { href, isActive, class: className } = Astro.props;
---

<a
  href={href}
  class:list={[
    "block text-black md:text-2xl pb-4 decoration-dashed aria-[current=page]:border-b aria-[current=page]:border-dashed",
    className,
  ]}
  aria-current={isActive ? "page" : undefined}
>
  <slot />
</a>
