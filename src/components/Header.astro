---
import Navigation from "@components/Navigation.astro";
import Container from "@components/Container.astro";
---

<Container class="bg-card pt-4" transition:persist>
  <header
    class="w-full text-center border-t border-b border-solid mb-4 sm:text-left"
  >
    <a
      class="fixed -top-full left-1/2 py-3 px-4 bg-green -translate-x-1/2 transition-top ease-in-out delay-150 focus:top-4 focus:outline-4 focus:outline-black focus:-outline-offset-2"
      href="#content">Skip to main content</a
    >
    <Navigation />
  </header>
</Container>
