---
import { SEO, type Props as SEOProps } from "astro-seo";
const facebookImageFile = new URL("/images/facebook-social.jpg", Astro.url);
const twitterImageFile = new URL("/images/twitter-social.jpg", Astro.url);

interface Props {
  seo?: SEOProps;
}

const { seo } = Astro.props;

const siteName = "Deadman's Brew";
const siteDescription = "The ongoing movie ticket collection of Jacob Proffer.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<SEO
  title={seo?.title}
  description={seo?.description ?? siteDescription}
  canonical={canonicalURL}
  openGraph={{
    basic: {
      url: canonicalURL,
      title: seo?.title ?? siteName,
      type: "website",
      image: facebookImageFile.toString(),
    },
    image: {
      url: facebookImageFile.toString(),
      secureUrl: facebookImageFile.toString(),
      alt: "",
      height: 1200,
      width: 800,
    },
  }}
  extend={{
    meta: [
      {
        property: "og:locale",
        content: "en_US",
      },
      {
        property: "og:description",
        content:
          seo?.description ??
          "The ongoing movie ticket collection of Jacob Proffer.",
      },
      {
        property: "og:site_name",
        content: siteName,
      },
      {
        name: "twitter:card",
        content: "summary_large_image",
      },
      {
        name: "twitter:title",
        content: seo?.title ?? "Deadman's Brew",
      },
      {
        name: "twitter:description",
        content: seo?.description ?? siteDescription,
      },
      {
        name: "twitter:image",
        content: twitterImageFile.toString(),
      },
      {
        name: "twitter:image:alt",
        content: "A pile of movie tickets.",
      },
    ],
  }}
/>
