---
import Container from "./Container.astro";

interface Props {
  headline: string;
  headingLevel?: 1 | 2 | 3 | 4 | 5 | 6;
}

const { headline, headingLevel = 2 } = Astro.props;
const HeadingTag = `h${headingLevel}` as any;
---

<section class="relative py-4">
  <Container>
    {headline && <HeadingTag class="text-4xl">{headline}</HeadingTag>}
    <slot />
  </Container>
</section>
